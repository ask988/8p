<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>DailyPulse — Online Magazine (Beginner)</title>
  <meta name="description" content="Simple online magazine template with topics, featured articles, and a subscription demo." />

  <style>
    /* Minimal CSS — keep the markup obvious for beginners */
    body{font-family:Arial,Helvetica,sans-serif;margin:18px;color:#111;background:#fbfdff}
    header{display:flex;justify-content:space-between;align-items:center}
    .brand{font-weight:800;font-size:22px}
    nav a{margin-left:10px;color:#0366d6;text-decoration:none}
    .container{display:grid;grid-template-columns:1fr 320px;gap:20px;margin-top:18px}
    .card{background:#fff;border:1px solid #e6eef8;padding:14px;border-radius:10px}
    .featured{display:flex;gap:12px}
    .featured img{width:320px;height:180px;object-fit:cover;border-radius:8px}
    .topics ul{list-style:none;padding:0;margin:0}
    .topics li{padding:8px 0;border-bottom:1px dashed #f1f5f9}
    .article{margin-bottom:12px}
    .small{color:#666;font-size:13px}
    form input, form textarea{width:100%;padding:8px;border:1px solid #ddd;border-radius:6px;margin-top:8px}
    .btn{display:inline-block;padding:8px 10px;border-radius:6px;border:1px solid #0366d6;color:#0366d6;text-decoration:none}
    footer{margin-top:22px;color:#666;text-align:center}
    @media(max-width:900px){.container{grid-template-columns:1fr} .featured{flex-direction:column} .featured img{width:100%}}
  </style>
</head>
<body>
  <header>
    <div>
      <div class="brand">DailyPulse</div>
      <div class="small">News, culture, tech & lifestyle — beginner friendly template</div>
    </div>
    <nav>
      <a href="#featured">Featured</a>
      <a href="#latest">Latest</a>
      <a href="#topics">Topics</a>
      <a href="#subscribe" class="btn">Subscribe</a>
    </nav>
  </header>

  <div class="container">
    <!-- MAIN COLUMN -->
    <main>

      <!-- Featured section -->
      <section id="featured" class="card">
        <h2 style="margin-top:0">Featured</h2>
        <div class="featured">
          <img src="https://images.unsplash.com/photo-1501601966331-3a3c3da6f7c0?w=1200&q=60" alt="featured">
          <div>
            <h3 style="margin:0">How Cities Are Rethinking Public Spaces</h3>
            <div class="small">By R. Kapoor • Urban Planning • Nov 2025</div>
            <p class="small">A short summary of the featured article — what it covers and why it matters. Perfect for a magazine hero section.</p>
            <p><a href="#" class="btn">Read full story</a></p>
          </div>
        </div>
      </section>

      <!-- Latest articles -->
      <section id="latest" class="card" style="margin-top:12px">
        <h2 style="margin-top:0">Latest Articles</h2>

        <article class="article">
          <h4 style="margin:6px 0">Tech: AI Tools for Students</h4>
          <div class="small">By A. Singh • Tech</div>
          <p class="small">Quick intro: tools and study workflows you can use to learn faster.</p>
        </article>

        <article class="article">
          <h4 style="margin:6px 0">Culture: Small Town Eateries Worth Trying</h4>
          <div class="small">By M. Iyer • Culture</div>
          <p class="small">Local food guides and why they matter to travellers and students.</p>
        </article>

        <article class="article">
          <h4 style="margin:6px 0">Health: Staying Active in Exam Season</h4>
          <div class="small">By Health Desk • Wellness</div>
          <p class="small">Practical tips on short workouts and mental breaks during study periods.</p>
        </article>

      </section>

      <!-- Newsletter subscription (client-side demo) -->
      <section id="subscribe" class="card" style="margin-top:12px">
        <h2 style="margin-top:0">Subscribe to DailyPulse</h2>
        <p class="small">Enter your email to receive weekly highlights. This demo saves subscriptions locally for learning purposes.</p>
        <form id="subForm" onsubmit="saveSub(event)">
          <input type="email" name="email" placeholder="you@example.com" required />
          <div style="margin-top:8px;display:flex;gap:8px">
            <button class="btn" type="submit">Subscribe</button>
            <button type="button" onclick="clearSubs()" style="background:#fff;border:1px solid #ccc">Clear</button>
          </div>
        </form>
        <div id="subMsg" class="small" style="margin-top:8px;color:green"></div>
        <div style="margin-top:10px"><strong>Saved subscribers (demo)</strong><div id="savedSubs" class="small"></div></div>
      </section>

    </main>

    <!-- SIDEBAR -->
    <aside>
      <div class="card topics">
        <h3 style="margin-top:0">Topics</h3>
        <ul>
          <li><a href="#" onclick="filterTopic(event,'all')">All</a></li>
          <li><a href="#" onclick="filterTopic(event,'tech')">Tech</a></li>
          <li><a href="#" onclick="filterTopic(event,'culture')">Culture</a></li>
          <li><a href="#" onclick="filterTopic(event,'science')">Science</a></li>
          <li><a href="#" onclick="filterTopic(event,'health')">Health</a></li>
        </ul>
      </div>

      <div class="card" style="margin-top:12px">
        <h3 style="margin-top:0">Featured authors</h3>
        <ul style="list-style:none;padding:0;margin:0">
          <li class="small">R. Kapoor</li>
          <li class="small">A. Singh</li>
          <li class="small">M. Iyer</li>
        </ul>
      </div>

      <div class="card" style="margin-top:12px">
        <h3 style="margin-top:0">About</h3>
        <p class="small">DailyPulse is a beginner-friendly online magazine template. Replace content and images to make it yours.</p>
      </div>

    </aside>
  </div>

  <footer>
    <p style="margin:0" class="small">&copy; <span id="year"></span> DailyPulse — Basic magazine template for learning.</p>
  </footer>

  <script>
    // Simple localStorage demo for subscribers
    const SUB_KEY = 'dailypulse_subs_v1';
    function loadSubs(){ try{return JSON.parse(localStorage.getItem(SUB_KEY)||'[]')}catch(e){return[]} }
    function saveSubs(list){ localStorage.setItem(SUB_KEY, JSON.stringify(list)) }

    function renderSubs(){
      const wrap = document.getElementById('savedSubs');
      const s = loadSubs();
      if(s.length===0){ wrap.textContent='No subscribers yet.'; return }
      wrap.innerHTML = s.map(x => x).join('<br>');
    }

    function saveSub(e){
      e.preventDefault();
      const f = e.target; const email = f.email.value.trim();
      if(!email) return alert('Enter an email');
      const s = loadSubs(); if(s.includes(email)){ document.getElementById('subMsg').textContent='Already subscribed.'; return }
      s.unshift(email); saveSubs(s); document.getElementById('subMsg').textContent='Subscribed (demo).'; f.reset(); renderSubs();
    }

    function clearSubs(){ if(!confirm('Clear saved subscribers?')) return; localStorage.removeItem(SUB_KEY); renderSubs(); document.getElementById('subMsg').textContent='Cleared.' }

    function filterTopic(e,topic){ e.preventDefault(); alert('This is a simple template — add filtering code as needed.') }

    document.addEventListener('DOMContentLoaded', ()=>{ document.getElementById('year').textContent = new Date().getFullYear(); renderSubs(); });
  </script>
</body>
</html>
